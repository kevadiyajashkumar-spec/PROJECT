# ==============================================================================
# ENVIRONMENT VARIABLES FOR STUDENT ANALYTICS DASHBOARD
# ==============================================================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# OpenAI API Key (Required for AI features)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-api-key-here

# Environment (development/production)
ENV=development

# Server Configuration
HOST=127.0.0.1
PORT=8052
API_PORT=8000
DEBUG=False

# Data File Path (relative to project root)
DATA_PATH=data/data.csv

# LLM Configuration
LLM_MODEL=gpt-4-turbo-preview
# Alternative: gpt-3.5-turbo (faster, cheaper)
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=1000

# Performance Thresholds
PASS_GRADE=3.0
DISTINCTION_GRADE=3.7
HIGH_FAILURE_THRESHOLD=20
LOW_DISTINCTION_THRESHOLD=15

# Display Settings
TOP_DEPARTMENTS_DISPLAY=10
FOLLOWUP_QUESTIONS_COUNT=4